.g-group-list-header

  .g-group-pagination
  form.g-group-search-form.form-inline(role="form")
    .form-group.g-groups-search-container

  if (girder.currentUser && girder.currentUser.get('admin'))
    button.g-group-create-button.btn.btn-sm.btn-default
      i.icon-plus-squared
      |  Create Group

each group in groups
  .g-group-list-entry
    .g-group-right-column
      .g-group-created
        i.icon-clock
        | Created on
        span.g-group-created-date  #{girder.formatDate(group.get('created'), girder.DATE_DAY)}
    .g-group-title
      a.g-group-link(g-group-cid="#{group.cid}")
        b #{group.get('name')}
    .g-group-subtitle
      span.g-group-description  #{group.get('description')}
    .g-clear-right

