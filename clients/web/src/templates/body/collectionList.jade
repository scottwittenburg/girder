.g-collection-list-header

  .g-collection-pagination
  form.g-collection-search-form.form-inline(role="form")
    .form-group.g-collections-search-container

  if (girder.currentUser && girder.currentUser.get('admin'))
    button.g-collection-create-button.btn.btn-sm.btn-default
      i.icon-plus-squared
      |  Create Collection

each collection in collections
  .g-collection-list-entry
    .g-collection-right-column
      .g-collection-created
        i.icon-clock
        | Created on
        span.g-collection-created-date  #{girder.formatDate(collection.get('created'), girder.DATE_MINUTE)}
      .g-collection-updated
        i.icon-clock
        | Updated on
        span.g-collection-updated-date  #{girder.formatDate(collection.get('updated'), girder.DATE_MINUTE)}

    .g-collection-title
      a.g-collection-link(g-collection-cid="#{collection.cid}")
        b #{collection.get('name')}
    .g-collection-subtitle
      span.g-collection-description  #{collection.get('description')}
    .g-clear-right
