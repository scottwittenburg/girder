.g-group-header
  border-bottom 1px solid #ddd
  margin-bottom 15px

.g-group-name
  font-size 20px
  color #555

.g-group-description
  font-size 16px
  font-weight bold
  font-size 16px
  color #999
  margin-bottom 5px
  min-height 15px

.g-group-status-container
  margin-top 5px
  color #777
  padding 6px 8px
  border-radius 3px
  box-shadow 1px 1px 3px 2px #f5f5f5

  &.g-member
    background-color #edffed
    border 1px solid #cdedcd
  &.g-invited
    background-color #fffed8
    border 1px solid #e5e2c8
  &.g-nonmember
    background-color #eee
    border 1px solid #ddd

  > a
    font-weight bold

.g-group-members-container
  margin-top 15px

.g-group-members
  list-style-type none
  padding 0

  >li
    border-bottom 1px solid #f0f0f0
    background-color #fbfbfb
    padding 5px

.g-group-members-header
  background-color #f0f0f0
  padding 8px 5px
  color #555
  border-bottom 1px solid #ddd

.g-member-pagination>ul
  margin 5px 0

.g-group-member-controls
  >a
    font-size 15px
    margin-left 3px
