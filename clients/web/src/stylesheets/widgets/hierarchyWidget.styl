.g-hierarchy-actions-header
  background-image linear-gradient(to bottom,#e6e6e6 0%,#f7f7f7 8px)
  padding 4px 5px 3px
  background-color #f6f6f6
  margin-bottom 2px
  border-bottom 1px solid #efefef

  .g-select-all
    font-size 16px
    background-color green

  .btn-group
    margin-left 12px

  button
    margin-left 12px
    padding 4px 8px

.g-folder-header-buttons
  float right

.g-hierarchy-breadcrumb-bar
  ol.breadcrumb
    margin-bottom 0
    border-radius 0
    background-color #f0f0f0
    border-bottom 1px solid #ddd
    padding-left 5px
    padding-right 5px

    >li.active
      color #555

.g-folder-list,.g-item-list
  margin 0
  padding 0
  list-style-type none

  >li
    border-bottom 1px solid #f0f0f0
    box-sizing border-box
    padding 4px 5px 3px

  >.g-folder-list-entry,>.g-item-list-entry
    background-color #fbfbfb
    font-size 15px
  >.g-show-more
    background-image linear-gradient(to bottom, #f6f6f6 0%, #fff 10px)

  .g-list-checkbox
    font-size 16px
    margin-right 7px
    position relative
    top -1px

.g-checked-folder-count
  margin-right 23px

.g-empty-parent-message
  margin-top 5px
  background-color #fffee0
  color #777
  padding 6px 8px
  border-radius 3px
  border 1px solid #e5e2c8
  box-shadow 1px 1px 3px 2px #f5f5f5

.g-hierarchy-level-up
  border 1px solid #d5d5d5
  border-radius 3px
  padding 2px 3px

  &:hover
    border 1px solid #aaa
    background-color #dadada

.g-item-size
  display inline-block
  margin-left 8px
  color #808080
