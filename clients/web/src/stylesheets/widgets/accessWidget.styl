.g-access-modal-body
  padding-top 10px
  padding-bottom 0

.g-public-container
  margin-bottom 11px

  .radio
    margin-top 0
    color #aaa

  .radio.g-selected
    color #333

    i.icon-globe
      color #3355a0
    i.icon-lock
      color #d0b822

.g-ac-list-title
  border-radius 4px 4px 0 0
  background-color #666
  background-image linear-gradient(to bottom, #555 0%, #7a7a7a 100%)
  color white
  font-weight bold
  padding 3px 10px

.g-ac-list
  border-radius 0 0 4px 4px
  border-left 1px solid #e4e4e4
  border-right 1px solid #e4e4e4
  border-bottom 1px solid #e4e4e4
  box-shadow inset 0 0 4px 1px #e6e6e6
  background-color #fffee5
  padding 1px 4px

  .g-group-access-entry,.g-user-access-entry
    margin 9px 0

  .g-access-icon
    color #666
    font-size 25px
    vertical-align top
    display inline-block

  .g-access-desc
    margin-left 7px
    display inline-block
    .g-desc-title
      font-size 14px
    .g-desc-subtitle
      font-size 12px
      color #888

  .g-access-col-left
    display inline-block
    vertical-align top
    width 260px

  .g-access-col-right
    display inline-block
    vertical-align top

    .g-action-remove-access
      color #999
      margin-left 20px
      font-size 16px

    .g-action-remove-access:hover
      color #d02344

.g-grant-access-container
  margin-top 5px
  padding-top 8px

  .form-group>label
    font-weight normal
    font-size 13px
